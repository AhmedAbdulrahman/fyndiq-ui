{
  "name": "fyndiq-ui-build",
  "private": true,
  "author": "Thibaut REMY <thibaut.remy@fyndiq.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna exec -- rimraf lib",
    "prebuild": "npm run clean",
    "build": "lerna exec --ignore fyndiq-ui-test -- babel src -d lib --ignore *.test.js",
    "build:watch": "lerna exec --parallel --ignore fyndiq-ui-test -- babel src -d lib --ignore *.test.js -w",
    "publish": "npm run build && lerna publish",
    "dev": "npm run build:watch & lerna run storybook --stream --scope fyndiq-ui-test",
    "lerna": "lerna",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --cache --ignore-pattern coverage --ignore-pattern node_modules --ignore-pattern lib .",
    "lint:css": "stylelint \"packages/**/*.css\"",
    "jest": "jest",
    "test": "jest --coverage && codecov && npm run lint"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-jest": "^22.0.4",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "codecov": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.14.0",
    "eslint-config-fyndiq": "^0.4.2",
    "file-loader": "^1.1.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.0.4",
    "lerna": "^2.2.0",
    "mock-local-storage": "^1.0.4",
    "moment": "^2.20.1",
    "prettier": "^1.9.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "@storybook/addon-info": "^3.3.3",
    "@storybook/react": "^3.3.3",
    "css-loader": "^0.28.8",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.10",
    "prop-types": "^15.6.0",
    "style-loader": "^0.19.0",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0"
  },
  "jest": {
    "setupFiles": [
      "mock-local-storage",
      "./setup-test.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.css$": "identity-obj-proxy"
    }
  }
}
